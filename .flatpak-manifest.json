{
    "id": "org.kde.skanpage",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.10",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "skanpage",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all",
        "--share=network",
        "--system-talk-name=org.freedesktop.Avahi"
    ],
    "cleanup": [
        "/include",
        "/lib/*/cmake",
        "/lib/*/pkgconfig",
        "/lib/sane/*.la",
        "/lib/*.a",
        "/lib/*.la",
        "/lib/cmake",
        "/lib/pkgconfig"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "ksane-dependencies",
            "buildsystem": null,
            "modules": [
                {
                    "name": "sane",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--with-usb",
                        "--with-v4l",
                        "--with-gphoto2",
                        "--enable-pthread",
                        "--enable-pnm-backend",
                        "--enable-pthread",
                        "--enable-avahi"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://gitlab.com/sane-project/backends.git",
                            "tag": "1.4.0",
                            "x-checker-data": {
                                "type": "git",
                                "tag-pattern": "^([\\d.]+)$"
                            },
                            "commit": "c7e4b5e35e3d614d2b1181d760a717bfc395a203"
                        }
                    ]
                },
                {
                    "name": "sane-airscan",
                    "buildsystem": "meson",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/0.99.36.tar.gz",
                            "sha256": "43d3436c0199496ee18aca4f875fe3926a40a0fae781bc280cdb96f7b5068ac0",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 121086,
                                "url-template": "https://github.com/alexpevzner/sane-airscan/archive/refs/tags/$version.tar.gz"
                            }
                        }
                    ]
                },
                {
                    "name": "libksanecore",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DQT_MAJOR_VERSION=6"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://invent.kde.org/libraries/ksanecore"
                        }
                    ]
                },
                {
                    "name": "libksane",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DQT_MAJOR_VERSION=6"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://invent.kde.org/graphics/libksane"
                        }
                    ]
                }
            ]
        },
        {
            "name": "leptonica",
            "rm-configure": true,
            "config-opts": [
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/DanBloomberg/leptonica/releases/download/1.86.0/leptonica-1.86.0.tar.gz",
                    "sha256": "1fa08e40bb37fd45802d5e6e7b43927449a5c47d4608ef99d3bd3f0fa76baedc",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1549,
                        "url-template": "https://github.com/DanBloomberg/leptonica/releases/download/$version/leptonica-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "tesseract",
            "config-opts": [
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/tesseract-ocr/tesseract/archive/refs/tags/5.3.0.tar.gz",
                    "sha256": "7e70870f8341e5ea228af2836ce79a36eefa11b01b56177b4a8997f330c014b8"
                },
                {
                    "type": "file",
                    "url": "https://github.com/tesseract-ocr/tessdata_best/raw/4.1.0/eng.traineddata",
                    "sha256": "8280aed0782fe27257a68ea10fe7ef324ca0f8d85bd2fd145d1c2b560bcb66ba",
                    "dest": "traineddata"
                },
                {
                    "type": "file",
                    "url": "https://github.com/tesseract-ocr/tessdata_best/raw/4.1.0/jpn.traineddata",
